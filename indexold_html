<body>

  <div id="presence-list"></div>

  <div class="app-card">
    <div id="auth-ui">
      <h2 style="text-align: center; margin-bottom: 24px;">Workspace</h2>
      <input type="email" id="user-email" placeholder="Email address">
      <input type="password" id="user-pass" placeholder="Password">
      <button class="btn-primary" id="btn-login">Sign In</button>
    </div>

    <div id="todo-app" style="display: none;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
        <span id="display-user" style="font-weight: 800; font-size: 13px; color: var(--primary);"></span>
        <button id="btn-logout" style="color: #94a3b8; background: none; border: none; cursor: pointer; font-size: 12px;">Logout</button>
      </div>
      
      <div id="typing-box" style="font-size:11px; color:var(--primary); height:16px; margin-bottom:8px;"></div>
      
      <form id="todo-form">
        <input type="text" id="todo-input" placeholder="What needs to be done?" required>
        <div style="display: flex; gap: 10px;">
          <select id="todo-priority" style="flex: 1;"><option value="1">Low</option><option value="2">Medium</option><option value="3">High</option></select>
          <input type="datetime-local" id="todo-due" style="flex: 2;">
        </div>
        <button class="btn-primary" type="submit" style="margin-top: 10px;">Add Task</button>
      </form>
      
      <div id="todo-list" style="margin-top: 30px;"></div>
    </div>
  </div>
  <div id="toast"></div>

  <script type="module">
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm'
    const supabase = createClient('https://hdzmbngzplkgkchmxfwu.supabase.co', 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imhkem1ibmd6cGxrZ2tjaG14Znd1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE2NzgyNzc3NjQsImV4cCI6MTk5Mzg1Mzc2NH0.ogb5FZ_nfUdIcobdas9EFm7u8vOs8-_RB2CB4MxLMAU');

    let _channel, _ip = "Local", _uName = "User";
    const _list = document.getElementById('todo-list');

    // Helpers
    const getHashColor = (s, d=false) => {
      let h = 0; for(let i=0; i<s.length; i++) h = s.charCodeAt(i) + ((h << 5) - h);
      return `hsl(${Math.abs(h % 360)}, 70%, ${d ? '35%' : '88%'})`;
    };

    const getDueStatus = (ds) => {
      if(!ds) return '';
      const diff = new Date(ds) - new Date();
      let label, cls;
      if(diff < 0) { label="Overdue"; cls="due-overdue"; }
      else if(diff < 7200000) { label=Math.floor(diff/60000) + "m left"; cls="due-soon"; }
      else { label=new Date(ds).toLocaleDateString([], {month:'short', day:'numeric'}); cls="due-future"; }
      return `<span class="due-badge ${cls}">üïí ${label}</span>`;
    };

    async function getIP() { try { const r=await fetch('https://api.ipify.org?format=json'); const d=await r.json(); _ip=d.ip; } catch(e){} }
    getIP();

    const toast = (m) => { const t=document.getElementById('toast'); t.innerText=m; t.style.display='block'; setTimeout(()=>t.style.display='none', 3000); };

    // Auth
    document.getElementById('btn-login').onclick = async () => {
      const { error } = await supabase.auth.signInWithPassword({ email: document.getElementById('user-email').value, password: document.getElementById('user-pass').value });
      if(error) alert(error.message);
    };
    document.getElementById('btn-logout').onclick = async () => { await supabase.auth.signOut(); window.location.reload(); };

    supabase.auth.onAuthStateChange((event, session) => {
      document.getElementById('todo-app').style.display = session ? 'block' : 'none';
      document.getElementById('auth-ui').style.display = session ? 'none' : 'block';
      if (session) { _uName = session.user.email.split('@')[0]; _uName = _uName.charAt(0).toUpperCase() + _uName.slice(1); document.getElementById('display-user').innerText = "‚ú¶ " + _uName; load(); initRealtime(); }
    });

    async function load() {
      const { data } = await supabase.from('todos').select('*').order('priority', { ascending: false }).order('id', { ascending: false });
      if (data) render(data);
    }

    function render(todos) {
      _list.innerHTML = todos.map(t => {
        const pLvl = t.priority || 1;
        const pTxt = pLvl === 3 ? 'URGENT' : pLvl === 2 ? 'MED' : 'LOW';
        const cb = t.claimed_by;
        return `
          <div class="todo-item priority-${pLvl} ${cb ? 'claimed-row' : ''}" data-id="${t.id}" style="--claim-color: ${getHashColor(cb || '')}">
            <div style="padding-top: 4px;"><input type="checkbox" ${t.is_complete ? 'checked' : ''} class="task-cb" style="width:20px; height:20px; accent-color:var(--primary); cursor:pointer;"></div>
            <div>
              <div style="display:flex; align-items:center; gap:8px;">
                <span class="p-badge priority-${pLvl}" data-action="cycle">${pTxt}</span>
                ${getDueStatus(t.due_at)}
              </div>
              <div class="todo-text ${t.is_complete ? 'completed' : ''}">${t.task}</div>
              ${cb ? `<span style="font-size:10px; font-weight:800; color:${getHashColor(cb, true)}">‚òùÔ∏è ${cb} is working on this</span>` : ''}
              <div class="todo-meta">
                <span class="user-avatar" style="background:${getHashColor(t.created_by_name || 'Team')}">${(t.created_by_name || 'T').charAt(0)}</span>
                ${t.created_by_name || 'Team'} ‚Ä¢ ${t.ip_address || '---'}
              </div>
              <div class="reaction-container">
                ${['üëç', 'üôå', 'üëÄ', 'üî•'].map(e => `<button class="reaction-btn" data-action="react" data-emoji="${e}">${e} ${(t.reactions || {})[e] || ''}</button>`).join('')}
                <button class="claim-btn ${cb === _uName ? 'active-claim' : ''}" data-action="claim">${cb === _uName ? '‚úì My Task' : (cb ? 'Take Over' : 'Claim')}</button>
              </div>
            </div>
            <button class="delete-btn">&times;</button>
          </div>`;
      }).join('');
    }

    _list.onclick = async (e) => {
      const id = e.target.closest('.todo-item')?.dataset.id;
      if(!id) return;
      const sig = (m) => _channel.send({ type: 'broadcast', event: 'action', payload: { name: _uName, msg: m } });

      if (e.target.classList.contains('task-cb')) {
        await supabase.from('todos').update({ is_complete: e.target.checked }).eq('id', id);
        sig(e.target.checked ? "finished a task" : "reopened a task");
      } else if (e.target.classList.contains('delete-btn')) {
        await supabase.from('todos').delete().eq('id', id);
        sig("deleted a task");
      } else if (e.target.dataset.action === 'cycle') {
        const cur = e.target.classList.contains('priority-3') ? 3 : e.target.classList.contains('priority-2') ? 2 : 1;
        await supabase.from('todos').update({ priority: cur >= 3 ? 1 : cur + 1 }).eq('id', id);
        sig("changed urgency");
      } else if (e.target.dataset.action === 'claim') {
        await supabase.from('todos').update({ claimed_by: _uName }).eq('id', id);
        sig("claimed a task");
      } else if (e.target.dataset.action === 'react') {
        const emoji = e.target.dataset.emoji;
        const { data } = await supabase.from('todos').select('reactions').eq('id', id).single();
        let r = data.reactions || {}; r[emoji] = (r[emoji] || 0) + 1;
        await supabase.from('todos').update({ reactions: r }).eq('id', id);
        sig(`reacted ${emoji}`);
      }
    };

    function initRealtime() {
      _channel = supabase.channel('v_luxury', { config: { presence: { key: _uName } } });
      _channel
        .on('postgres_changes', { event: '*', schema: 'public', table: 'todos' }, async (p) => {
          await load();
          setTimeout(() => { const r = document.querySelector(`[data-id="${p.new?.id || p.old?.id}"]`); if(r) r.classList.add('item-updated'); }, 100);
        })
        .on('presence', { event: 'sync' }, () => {
          const s = _channel.presenceState();
          document.getElementById('presence-list').innerHTML = Object.keys(s).map(n => `<div class="user-pill" style="background:${getHashColor(n)}">‚óè ${n}</div>`).join('');
        })
        .on('broadcast', { event: 'action' }, ({ payload }) => toast(`üì¢ ${payload.name} ${payload.msg}`))
        .on('broadcast', { event: 'typing' }, ({ payload }) => { const b=document.getElementById('typing-box'); b.innerText = payload.typing ? payload.name + " is typing..." : ''; })
        .subscribe(async (s) => { if (s === 'SUBSCRIBED') await _channel.track({ online_at: new Date() }); });

      document.getElementById('todo-input').oninput = (e) => _channel.send({ type:'broadcast', event:'typing', payload:{ name:_uName, typing:e.target.value.length > 0 } });
    }

    document.getElementById('todo-form').onsubmit = async (e) => {
      e.preventDefault();
      const i=document.getElementById('todo-input'), p=document.getElementById('todo-priority'), d=document.getElementById('todo-due');
      await supabase.from('todos').insert([{ task: i.value, created_by_name: _uName, priority: parseInt(p.value), due_at: d.value || null, is_complete: false, ip_address: _ip, reactions: {} }]);
      i.value = ''; d.value = '';
    };
    setInterval(load, 30000);
  </script>
</body>
</html>
